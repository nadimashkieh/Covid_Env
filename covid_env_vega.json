{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Visualization of Environmental Factors Impacting Covid-19 as Researched in Literature. Nada Dimashkieh Chehab - PhD Candidate - The University of Central Florida",
    "width": 1200,
    "height": 1200,
    "padding": 5,
    "autosize": "none",
    "signals": [
        {
            "name": "labels",
            "value": true,
            "bind": {
                "input": "checkbox"
            }
        },
        {
            "name": "radius",
            "value": 500,
            "bind": {
                "input": "range",
                "min": 20,
                "max": 900
            }
        },
        {
            "name": "extent",
            "value": 360,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 360,
                "step": 1
            }
        },
        {
            "name": "rotate",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 360,
                "step": 1
            }
        },
        {
            "name": "layout",
            "value": "tidy",
            "bind": {
                "input": "radio",
                "options": [
                    "tidy",
                    "cluster"
                ]
            }
        },
        {
            "name": "links",
            "value": "line",
            "bind": {
                "input": "select",
                "options": [
                    "line",
                    "curve",
                    "diagonal",
                    "orthogonal"
                ]
            }
        },
        {
            "name": "originX",
            "update": "width / 2"
        },
        {
            "name": "originY",
            "update": "height / 2"
        }
    ],
    "data": [
        {
            "name": "tree",
            "url": "https://github.com/nadimashkieh/Covid_Env/blob/main/env.json",
            "transform": [
                {
                    "type": "stratify",
                    "key": "id",
                    "parentKey": "parent"
                },
                {
                    "type": "tree",
                    "method": {
                        "signal": "layout"
                    },
                    "size": [
                        1,
                        {
                            "signal": "radius"
                        }
                    ],
                    "as": [
                        "alpha",
                        "radius",
                        "depth",
                        "children"
                    ]
                },
                {
                    "type": "formula",
                    "expr": "(rotate + extent * datum.alpha + 270) % 360",
                    "as": "angle"
                },
                {
                    "type": "formula",
                    "expr": "PI * datum.angle / 180",
                    "as": "radians"
                },
                {
                    "type": "formula",
                    "expr": "inrange(datum.angle, [90, 270])",
                    "as": "leftside"
                },
                {
                    "type": "formula",
                    "expr": "originX + datum.radius * cos(datum.radians)",
                    "as": "x"
                },
                {
                    "type": "formula",
                    "expr": "originY + datum.radius * sin(datum.radians)",
                    "as": "y"
                }
            ]
        },
        {
            "name": "links",
            "source": "tree",
            "transform": [
                {
                    "type": "treelinks"
                },
                {
                    "type": "linkpath",
                    "shape": {
                        "signal": "links"
                    },
                    "orient": "radial",
                    "sourceX": "source.radians",
                    "sourceY": "source.radius",
                    "targetX": "target.radians",
                    "targetY": "target.radius"
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "linear",
            "range": {
                "scheme": "reds"
            },
            "domain": {
                "data": "tree",
                "field": "depth"
            },
            "zero": true
        },
        {
            "name": "scale_legend_values",
            "type": "ordinal"
        }
    ],
    "marks": [
        {
            "type": "path",
            "from": {
                "data": "links"
            },
            "encode": {
                "update": {
                    "x": {
                        "signal": "originX"
                    },
                    "y": {
                        "signal": "originY"
                    },
                    "path": {
                        "field": "path"
                    },
                    "stroke": {
                        "value": "#ccc"
                    }
                }
            }
        },
        {
            "type": "symbol",
            "from": {
                "data": "tree"
            },
            "encode": {
                "enter": {
                    "size": {
                        "field": "size"
                    },
                    "stroke": {
                        "value": "#fff"
                    }
                },
                "update": {
                    "x": {
                        "field": "x"
                    },
                    "y": {
                        "field": "y"
                    },
                    "fill": {
                        "scale": "color",
                        "field": "depth"
                    },
                    "tooltip": {
                        "field": "tool_tip",
                        "type": "quantitative"
                    }
                }
            }
        },
        {
            "type": "text",
            "from": {
                "data": "tree"
            },
            "encode": {
                "enter": {
                    "text": {
                        "field": "name"
                    },
                    "fontSize": {
                        "value": 7
                    },
                    "baseline": {
                        "value": "middle"
                    },
                    "tooltip": {
                        "field": "name",
                        "type": "nominal"
                    }
                },
                "update": {
                    "x": {
                        "field": "x"
                    },
                    "y": {
                        "field": "y"
                    },
                    "dx": {
                        "signal": "(datum.leftside ? -1 : 1) * 30"
                    },
                    "angle": {
                        "signal": "datum.leftside ? datum.angle - 180 : datum.angle"
                    },
                    "align": {
                        "signal": "datum.leftside ? 'right' : 'left'"
                    },
                    "opacity": {
                        "signal": "labels ? 1 : 0"
                    }
                }
            }
        }
    ]
}
